<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.PersonWithNumberOfDownloads"
            prefHeight="400.0" prefWidth="600.0">

    <TableView fx:id="tblStudentWithDownloads" editable="true">
        <columns>
            <TableColumn fx:id="colStudentId" text="Id">
                <cellValueFactory>
                    <PropertyValueFactory property="studentId"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="colNumberOfDownloads" text="Number of downloads">
                <cellValueFactory>
                    <PropertyValueFactory property="numberOfDownloads"/>

                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="colStudentName" text="Name">
                <cellValueFactory>
                    <PropertyValueFactory property="studentName"/>

                </cellValueFactory>
            </TableColumn>

        </columns>
    </TableView>

</AnchorPane>
